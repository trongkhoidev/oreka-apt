# Development Configuration for Local Testing
# Copy this file and update with your actual values

# Aptos Profile Configuration
APTOS_PROFILE=oreka_dev

# Private Key (keep this secure!)
# Generate with: aptos init --profile oreka_dev
APTOS_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Local/Devnet URLs
APTOS_REST_URL=https://fullnode.devnet.aptoslabs.com
APTOS_FAUCET_URL=https://faucet.devnet.aptoslabs.com

# Module Configuration
MODULE_ADDRESS=0xYOUR_DEVNET_ADDRESS_HERE

# Deployment Settings
MIN_BALANCE=100000000  # 0.1 APT minimum balance
GAS_UNIT_PRICE=100
MAX_GAS_AMOUNT=100000

# Pyth Configuration
PYTH_PRICE_SERVICE_URL=https://hermes.pyth.network/v2/updates/price/latest
PYTH_WORMHOLE_ADDRESS=0x5bc11445584a763c1fa7ed39081f1b920954da14e04b32440cba863d03e19625

# Security Settings
REQUIRE_MULTISIG=false
MULTISIG_THRESHOLD=2
MULTISIG_ACCOUNTS=""

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=debug
